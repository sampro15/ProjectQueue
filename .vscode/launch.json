{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["nodemon", "--exec", "tsx"],
            "program": "${workspaceFolder}/server/index.ts",
            "skipFiles": ["<node_internals>/**"],
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "console": "integratedTerminal",
            "restart": true,
            "env": {
                "NODEMON_QUIET": "true"
            }
        }
    ]
}